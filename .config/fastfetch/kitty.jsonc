        },
        {
            "type": "icons",
            "keyColor": "bright_magenta",
            "key": "  󰀻"
        },
        // {
        //     "type": "wallpaper",
        //     "key": "  󰸉"
        // },
        {
            "type": "cursor",
            "key": "  󰆿",
            "keyColor": "bright_magenta"
        },
        {
            "type": "packages",
            "keyColor": "bright_magenta",
            "key": "  󰏖"
        },
        {
            "type": "uptime",
            "keyColor": "bright_magenta",
            "key": "  󰅐"
        },
        {
            "type": "command",
            "keyColor": "bright_magenta",
            "key": "  󰃲",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); total_days=$(((current - birth_install)/86400)); ((total_days>=365)) && echo \"$((total_days/365)) years, $((total_days%365)) days\" || echo \"$total_days days\""
        },
