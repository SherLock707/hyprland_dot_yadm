            "format": "├──────────────────── \u001b[1m󰍹 \u001b[0m ──────────────────┤"
        },
        // {
        //     "type": "title",
        //     "key": "  ",
        //     "format": "{1}@{2}"
        // },
        {
            "type": "os",
            "key": "  ",
            "format": "{2}"
        },
        {
            "type": "kernel",
            "key": "  ",
            "format": "{1} {2}"
        },
        {
            "type": "wm",
            "key": "  "
            // "format": {1}""
        },
        {
            "type": "de",
            "key": "  "
        },
        {
            "type": "terminal",
            "key": "  "
        },
        {
            "type": "shell",
            "key": "  "
