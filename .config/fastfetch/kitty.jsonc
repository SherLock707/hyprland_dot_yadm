        },
        {
            "type": "command",
            "key": "  󰷛",
            "text": "pacman -Q hyprlock"
        },
        {
            "type": "command",
            "key": "  󰮫",
            "text": "echo \"rofi $(pacman -Q rofi | cut -d ' ' -f2 | cut -d '+' -f1) (Wayland)\""
        },
        {
            "type": "command",
            "key": "  ",
            "text": "pacman -Q mpv"
        },
        // {
        //     "type": "command",
        //     "key": "  󰺷",
